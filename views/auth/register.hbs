<div class="row vh-100 g-0">
    <div class="col-md-6 bg-register">
        <div><i class="fas fa-arrow-left"></i></div>
    </div>
    <div class="col-md-6 d-flex flex-column">
        <h5 class="p-3 fs-5 text-end">Hotel <span class="text-danger">Ceibo Real</span></h5>
        <div class="flex-fill d-flex justify-content-center align-items-center">
            <form class="register w-100 px-5 py-3">
                <h2 class="mb-5 text-center">Crea tu cuenta</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombres:</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo electrónico:</label>
                            <input type="text" class="form-control" id="email" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña:</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="apell" class="form-label">Apellidos:</label>
                            <input type="text" class="form-control" id="apell" name="apell">
                        </div>
                        <div class="mb-3">
                            <label for="telf" class="form-label">Teléfono:</label>
                            <input type="number" class="form-control" id="telf" name="telf">
                        </div>
                        <div class="mb-3">
                            <label for="password-repeat" class="form-label">Repetir contraseña:</label>
                            <input type="password" class="form-control" id="password-repeat" name="password-repeat">
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-1 mb-3">
                        <button type="submit" class="btn btn-danger">Registrarse</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>